/* Grid
–––––––––––––––––––––––––––––––––––––––––––––––––– */
.gridbox {
  position: relative;
  width: 100%;
  max-width: 960px;
  margin: 0 auto;
  padding: 0 20px;
  box-sizing: border-box; }
.column,
.grid {
  width: 100%;
  float: left;
  box-sizing: border-box; }

.gridbox {
  width: 80%; }
.column,
.grid {
  margin-left: 4%; }
.column:first-child,
.grid:first-child {
  margin-left: 0; }

.one.column,
.one.grid                    { width: 4.66666666667%; }
.two.grid                    { width: 13.3333333333%; }
.three.grid                  { width: 22%;            }
.four.grid                   { width: 30.6666666667%; }
.five.grid                   { width: 39.3333333333%; }
.six.grid                    { width: 48%;            }
.seven.grid                  { width: 56.6666666667%; }
.eight.grid                  { width: 65.3333333333%; }
.nine.grid                   { width: 74.0%;          }
.ten.grid                    { width: 82.6666666667%; }
.eleven.grid                 { width: 91.3333333333%; }
.twelve.grid                 { width: 100%; margin-left: 0; }

.one-third.column               { width: 30.6666666667%; }
.two-thirds.column              { width: 65.3333333333%; }

.one-half.column                { width: 48%; }

